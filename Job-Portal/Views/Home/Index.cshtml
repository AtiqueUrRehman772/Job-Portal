<body class="login">
    <div class="top-nav row"><h2>Smart Coders - Admin (Job-Portal)</h2></div>
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form id="loginForm" method="post">
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" id="userName" class="form-control" placeholder="Username" required autofocus />
                        </div>
                        <div>
                            <input type="password" id="userPass" class="form-control" placeholder="Password" required />
                        </div>
                        <div>
                            <button class="btn btn-default submit" type="submit" style="cursor:pointer">Log in</button>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a href="#signup" class="to_register"> Create Account </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Smart Coders</h1>
                                <p>©2022 All Rights Reserved. Smart Coders is a Software development Company. <a href="#">Privacy and Terms</a></p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>

            <div id="register" class="animate form registration_form">
                <section class="login_content">
                    <form>
                        <h1>Create Account</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Username" required />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Email" required />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Password" required />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="index.html">Submit</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                Already a member ?
                                <a href="#signin" class="to_register"> Log in </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Smart Coders</h1>
                                <p>©2022 All Rights Reserved. Smart Coders is a Software development Company. <a href="#">Privacy and Terms</a></p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $("#loginForm").submit(function (e) {
            e.preventDefault();
            var user1 = {};
            user1.userName = $("#userName").val();
            user1.userPass = $("#userPass").val();
            $.ajax({
                type: 'POST',
                url: '@Url.Content("~/api/UserAuth/userAuth")',
                contentType: "application/json",
                dataType: "json",
                data: JSON.stringify({
                    userName: user1.userName,
                    userPass: user1.userPass
                }),
                success: function (data) {
                    if (JSON.parse(data)) {
                        window.location.href = '/Home/HomePage';
                    }
                    else {
                        swal({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Login Credentials are invalid!',
                            footer: '<a href="">Why do I have this issue?</a>'
                        });
                    }
                }
            });
        });
